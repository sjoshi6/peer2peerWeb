extends layout

block content
	br
	div.container
		div.jumbotron
			form.form-horizontal(action='/v1/login', method='post')

				div(style="font-family:lucida grande,tahoma,verdana,arial,sans-serif;")
					h3.h3(style="text-align: center") Login
				br

				div.form-group
					label(for="email", class="control-label col-sm-4") Email
					div.col-sm-4                    
						input(type="email", name="email", placeholder="subraip@yahoo.com" class="form-control" required minlength=6)

				div.form-group
					label(for="password", class="control-label col-sm-4") Password
					div.col-sm-4                         
						input(type="password", name="password", class="form-control" required minlength=6)

				br
				div.form-group(style="text-align:center;")                  
					button.btn.btn-large.btn-primary(type="submit")
						span(class="glyphicon glyphicon-log-in")   Login

	h4.h4(style="text-align:center")
		span(class="label label-warning") #{flash_msg}
