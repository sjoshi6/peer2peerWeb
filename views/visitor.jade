extends layout

block content
	br
	h2.h2(style="text-align: center") #{visitor_message}
	br

	div.container
		div.jumbotron
			form.form-horizontal(action='/v1/visitor', method='post')

				h3.h3(style="text-align: center") Please leave your details here
				br

				div.form-group
					label(for="firstname", class="control-label col-sm-2")  First Name
					div.col-sm-10
						input(type="text", name="firstname", placeholder="First Name" class="form-control")

				div.form-group
					label(for="lastname", class="control-label col-sm-2") Last Name
					div.col-sm-10                    
						input(type="text", name="lastname", placeholder="Last Name" class="form-control")

				div.form-group
					label(for="email", class="control-label col-sm-2") Email
					div.col-sm-10                         
						input(type="text", name="email", placeholder="Email address" class="form-control")

				div.form-group
					label(for="age", class="control-label col-sm-2") Age
					div.col-sm-10                         
						input(type="number", name="age", placeholder="22", min="15" class="form-control")

				div.form-group
					label(for="gender", class="control-label col-sm-2") Gender
					div.radio-inline
						input(type="radio", name="gender", value="1", checked=gender=="male" )
						| Male

					div.radio-inline
						input(type="radio", name="gender", value="0", checked=gender=="female")
						| Female

				div.form-group
					label(for="university", class="control-label col-sm-2") University
					div.col-sm-10   
						input(type="text", name="university", placeholder="Mumbai University" class="form-control")

				div.form-group
					label(for="phonenumber", class="control-label col-sm-2") Phone Number
					div.col-sm-10                 
						input.input-block-level(type="text", name="phonenumber", class="form-control")

				div.form-group(style="text-align:center;")                  
					button.btn.btn-large.btn-primary(type="submit") Submit
